<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PruebasBD.UbicarBD_Activity">

    <Button
        android:id="@+id/seleccioneArchivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_alignTop="@+id/leersd"
        android:text="Seleccionar Archivo" />

    <Button
    android:id="@+id/copiarBD"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/leersd"
    android:onClick="onClick2"
    android:text="Copiar BD" />


    <Button
        android:id="@+id/copiarBDservidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/leersd"
        android:onClick="onClick3"
        android:text="Copiar del Servidor" />

</LinearLayout>